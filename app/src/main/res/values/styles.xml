<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_size_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/padding_size_16</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsActivityButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_as_fu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>

    </style>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SmallMessageTextStyle">
        <item name="android:textColor">@color/black_as_fu</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MessageHeadLine">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TypicalArrowBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:src">@drawable/arrowback</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MainActivityBackground">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="TrackName">
        <item name="android:textColor">@color/black_as_fu_to_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ArtistName">
        <item name="android:textColor">@color/grey_to_white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchLost">
        <item name="android:src">@drawable/search_lost_stop_light</item>
    </style>

    <style name="InfoMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ConnectionLost">
        <item name="android:src">@drawable/internet_lost_stop_light</item>
    </style>

    <style name="InfoButton">
        <item name="android:textColor">@color/white_to_black</item>
        <item name="android:backgroundTint">@color/black_to_white</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="TrackAttributes">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackAttributesValue">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tab_style" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tab_layout_style">
        <item name="android:background">@color/white_to_black</item>
        <item name="tabTextColor">@color/black_to_white</item>
        <item name="tabIndicatorColor">@color/black_to_white</item>
    </style>

    <style name="bottom_navigation_style">
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
    </style>

    <style name="font_YS_regular">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetSeparatorStyle">
        <item name="android:backgroundTint">@color/grey_to_white</item>
    </style>
    <style name="AddToPlaylistTextViewStyle">
        <item name="android:textColor">@color/black_to_white</item>
    </style>
    <style name="refresh_button_style">
        <item name="android:backgroundTint">@color/black_to_white</item>
    </style>
    <style name="Screen_Theme">
        <item name="android:background">@color/white_to_black</item>
    </style>
    <style name="back_button">
        <item name="android:tint">@color/black_to_white</item>
    </style>
    <style name="toolbar_text_style">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="CreatePlaylistEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="android:background">@drawable/edittext_background</item>-->
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textColorHint">@color/black_to_white</item>
        <item name="boxStrokeColor">@color/input_layout_colors_light</item>
        <item name="strokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>
    <style name="playlist_details_style">
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">21dp</item>
    </style>
    <style name="playlist_details_linear_layout_style">
        <item name="android:background">@drawable/bottom_sheet_bg_light</item>
    </style>

</resources>