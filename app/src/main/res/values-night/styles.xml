<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsActivityButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="MainActivityBackground">
        <item name="android:background">@color/black</item>
    </style>


    <style name="SmallMessageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="MessageHeadLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SearchLost">
        <item name="android:src">@drawable/search_lost_stop_dark</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ConnectionLost">
        <item name="android:src">@drawable/internet_lost_stop_dark</item>
    </style>



</resources>