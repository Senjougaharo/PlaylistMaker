<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsActivityButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="MainActivityBackground">
        <item name="android:background">@color/black</item>
    </style>


    <style name="SmallMessageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="MessageHeadLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SearchLost">
        <item name="android:src">@drawable/search_lost_stop_dark</item>
    </style>

    <style name="InfoMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_to_white</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ConnectionLost">
        <item name="android:src">@drawable/internet_lost_stop_dark</item>
    </style>

    <style name="tab_style" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="tab_layout_style">
        <item name="android:background">@color/white_to_black</item>
        <item name="tabTextColor">@color/black_to_white</item>
        <item name="tabIndicatorColor">@color/black_to_white</item>
    </style>

    <style name="bottom_navigation_style">
        <item name="itemIconTint">@color/bottom_nav_color_selector_night</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector_night</item>
    </style>

    <style name="font_YS_regular">
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetSeparatorStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="AddToPlaylistTextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="refresh_button_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="back_button">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="toolbar_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="CreatePlaylistEditTextStyle"  parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/input_layout_colors_dark</item>
        <item name="hintTextColor">@color/blue</item>
    </style>
    <style name="playlist_details_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingVertical">21dp</item>
    </style>
</resources>