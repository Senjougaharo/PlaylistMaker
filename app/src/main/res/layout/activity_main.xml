<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_size_16"
    tools:context=".MainActivity">


    <TextView
        style="@style/MessageHeadLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="28dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            style="@style/MainActivityButton"
            android:text="@string/search"
            app:icon="@drawable/icon_lupa" />

        <Button
            android:id="@+id/media_button"
            style="@style/MainActivityButton"
            android:text="@string/media_library"
            app:icon="@drawable/media" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainActivityButton"
            android:text="@string/settings"
            app:cornerRadius="@dimen/padding_size_16"
            app:icon="@drawable/settings" />
    </LinearLayout>
</LinearLayout>